<div id="modal">
  <div id="modal-content">
        <div id = 'product-img'> </div>
        <%= form_with url: 'http://localhost:3000/api/v1/ratings', class: 'rating-form', remote: true do |form| %> 
          <%= form.hidden_field :product_id %>
          <div class="form-group">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :stars, class: 'form-label' %>
            <div class="rating">
              <% (5..1).step(-1).each do |i| %>
                <%= radio_button_tag "stars", i, checked = false, id: "e#{i}"%> <%= label_tag "e#{i}", "â˜†" %>
              <% end %>
            </div>
          </div>
        
          <div class="form-group">
            <%= form.label :comment, class: 'form-label' %>
            <%= form.text_area :comment, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.submit 'Submit Rating', class: 'button', role: 'button' %>
            <%= form.label :close, class: 'button', id: 'modal-close' %>
          </div> 
        <div id='rating-alert' class='error'></div>
      <% end %>
  </div>
</div>
